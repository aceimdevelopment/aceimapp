= form_for([@segmento, @preguntas.build]) do |f|
	%table
		%tr.req
			%td.derecha.separado
				%b= "*Pregunta/Ítem::"
			%td
				= f.text_field :clave, :html => {:style => 'width: 300px;'}
		%tr.req
			%td.derecha.separado
				%b= "*Pregunta:"
			%td
				= f.text_field :respuesta, :html => {:style => 'width: 300px;'}
				= "(recuerde finalizar con signo de interrogación '?')"				
		%tr
			%td
			%td
				%input.btn.small{:type => 'submit', :value => 'Agregar Pregunta/Ítem', :name => 'commit'}
